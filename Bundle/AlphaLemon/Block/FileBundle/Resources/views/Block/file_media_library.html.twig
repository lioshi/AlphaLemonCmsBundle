{% extends 'AlphaLemonCmsBundle:Elfinder:media_library.html.twig' %}

{% block init_script %}
<script type="text/javascript" charset="utf-8">
    $(document).ready(function() {
        $('<div/>').dialogelfinder({
                url : frontController + 'backend/' + $('#al_available_languages').attr('rel') + '/al_elFinderFileConnect',
                lang : 'en',
                width : 840,
                destroyOnClose : true,
                commandsOptions : {
                    getfile : {
                        onlyURL  : false,
                    }
                },
                getFileCallback : function(file, fm) {
                    $('#al_json_block_file').val(file.path);
                    alert('File has been added');
                }
        }).dialogelfinder('instance');
    });    
</script>
{% endblock %}
