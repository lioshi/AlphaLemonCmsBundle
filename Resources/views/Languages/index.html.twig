{% extends 'AlphaLemonCmsBundle:Panels:base.html.twig' %}

{% set domain = "al_languages" %}
{% set panel_class = 'al_panel_contents_width' %}   

{% block al_cms_header_inside %}
    <h1>{{ "Website's languages manager" | trans([], domain) }}</h1>
    <p>{{ "In this module you can manage the website's languages, adding new ones, or editing them or removing them from the site." | trans([], domain) }}</p>
{% endblock %}

{% block al_sidebar_middle_inside %}
<div id="al_languages" class="al_panel">

    {{ form_errors(form) }}

    <div>        
        <h2>{{ "Language attributes" | trans([], domain) }}</h2>
        <form id="al_languages_form" class="form-horizontal">
            <div class="control-group bootstrap-form-item-margin-fixer">
                {{ form_label(form.language, "Language" | trans([], domain), { 'label_attr': {'class': 'control-label'} }) }}
                <div class="controls">
                {{ form_errors(form.language) }} {{ form_widget(form.language, { 'attr': {'title': "Choose the language" | trans([], domain) } }) }}
                </div>
            </div>                
            <div class="control-group">
                <label class="checkbox pull-right">                
                    {{ form_errors(form.isMain) }} {{ form_widget(form.isMain, { 'attr': {'title': "When checked, promotes the language as the website's main language, which is the one displayed when any language has been given" | trans([], domain) } }) }}
                    {{ form_label(form.isMain, "Is Main" | trans([], domain)) }}
                </label> 
            </div>
            {{ form_rest(form) }}
        </form>
        
        <input id="al_language_saver" type="submit" value="{{ "Save" | trans([], "al_commands") }}" class="btn btn-primary pull-right" />
