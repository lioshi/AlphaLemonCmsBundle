</div>
{% endblock %}

{% block al_sidebar_right_inside %}
    <div id="al_pages_box" class="al_panel_box">        
        <div class="al_panel_box_header">
            <span class="al_panel_box_header_title white-text-shadow">{{ "Languages selector" | trans([], domain) }}</span>
        </div>
        <div id="al_languages_list"  class="al_panel_list">
            {% include 'AlphaLemonCmsBundle:Languages:languages_list.html.twig' %}
        </div>
    </div>
    <input id="al_languages_remover" class="btn btn-danger pull-right" type="submit" value="{{ "Delete" | trans([], "al_commands") }}" />
{% endblock %}
